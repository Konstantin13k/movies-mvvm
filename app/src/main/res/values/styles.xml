<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="accent_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/accent_text_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/accent_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cast_image_style">
        <item name="shapeAppearanceOverlay">@style/actor_image_view_corners_style</item>
        <item name="android:layout_width">@dimen/actor_image_width</item>
        <item name="android:layout_height">@dimen/actor_image_height</item>
    </style>

    <style name="movie_cast_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">@dimen/cast_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="back_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:textColor">@color/gray_color</item>
        <item name="drawableStartCompat">@drawable/ic_back</item>
        <item name="android:gravity">center_vertical</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="movies_pg_style">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:background">@drawable/movie_pg_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ratingbar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="srb_numStars">5</item>
        <item name="srb_scrollable">false</item>
        <item name="srb_starPadding">1dp</item>
        <item name="srb_clickable">false</item>
        <item name="srb_drawableEmpty">@drawable/ic_star</item>
        <item name="srb_drawableFilled">@drawable/ic_color_star</item>
    </style>

    <style name="poster_image_view_style" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="favorite_movie_poster_image_view_style" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">6dp</item>
        <item name="cornerSizeTopLeft">6dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="actor_image_view_corners_style" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="movie_reviews_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movie_genres_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/accent_color</item>
    </style>

    <style name="movie_text_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="colorOnSecondary">@color/black</item>
    </style>

</resources>