<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/gray_color</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorSecondary">@color/accent_color</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppCompat.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.AppCompat.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/accent_color</item>
        <item name="colorOnSurface">@color/accent_color</item>
    </style>
</resources>